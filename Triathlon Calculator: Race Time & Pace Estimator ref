    <script>
        // Global share functions
        function shareOnTwitter(text, url) {
            const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}`;
            window.open(twitterUrl, '_blank', 'width=600,height=400');
        }

        function shareOnFacebook(url) {
            const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;
            window.open(facebookUrl, '_blank', 'width=600,height=400');
        }

        function shareOnLinkedIn(text, url) {
            const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;
            window.open(linkedinUrl, '_blank', 'width=600,height=400');
        }

        function shareOnWhatsApp(text, url) {
            const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(text + ' ' + url)}`;
            window.open(whatsappUrl, '_blank');
        }

        function copyToClipboard(url) {
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(url).then(function() {
                    showCopyFeedback(true);
                }).catch(function(err) {
                    console.warn('Clipboard API failed, using fallback:', err);
                    fallbackCopyToClipboard(url);
                });
            } else {
                fallbackCopyToClipboard(url);
            }
        }

        function fallbackCopyToClipboard(url) {
            try {
                const textArea = document.createElement('textarea');
                textArea.value = url;
                textArea.style.position = 'fixed';
                textArea.style.left = '-9999px';
                textArea.style.top = '-9999px';
                document.body.appendChild(textArea);
                textArea.focus();
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showCopyFeedback(true);
            } catch (err) {
                console.error('Fallback copy failed:', err);
                showCopyFeedback(false);
            }
        }

        function showCopyFeedback(success) {
            const btn = document.getElementById('copyLinkBtn');
            if (!btn) return;

            const originalText = btn.innerHTML;
            if (success) {
                btn.innerHTML = '‚úÖ Copied!';
                btn.classList.add('copied');
                setTimeout(function() {
                    btn.innerHTML = originalText;
                    btn.classList.remove('copied');
                }, 2000);
            } else {
                btn.innerHTML = '‚ùå Failed';
                btn.classList.add('failed');
                setTimeout(function() {
                    btn.innerHTML = originalText;
                    btn.classList.remove('failed');
                }, 2000);
            }
        }

        (function() {
            const result = document.getElementById('resultsContainer');

            // Tab functionality
            const tabButtons = document.querySelectorAll('.tc-tab-button');
            const tabContents = document.querySelectorAll('.tc-tab-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const tabName = button.getAttribute('data-tab');

                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabContents.forEach(content => content.classList.remove('active'));

                    button.classList.add('active');
                    document.getElementById(`${tabName}-tab`).classList.add('active');

                    result.classList.remove('show');
                });
            });

            // Initialize default values on page load
            initializeDefaultValues();

            // Form handlers
            document.getElementById('raceTimeForm').addEventListener('submit', handleRaceTimeSubmit);
            document.getElementById('paceAnalysisForm').addEventListener('submit', handlePaceAnalysisSubmit);

            // Race distance selection handler
            document.getElementById('raceDistanceType').addEventListener('change', function() {
                const customInputs = document.getElementById('customDistanceInputs');
                if (this.value === 'custom') {
                    customInputs.style.display = 'block';
                } else {
                    customInputs.style.display = 'none';
                    updatePresetDistances(this.value);
                }
            });

            function initializeDefaultValues() {
                // Set default Olympic distances on page load
                const defaultDistances = {
                    swim: 1500,
                    bike: 40,
                    run: 10
                };

                document.getElementById('swimDistance').value = defaultDistances.swim;
                document.getElementById('bikeDistance').value = defaultDistances.bike;
                document.getElementById('runDistance').value = defaultDistances.run;

                // Set default units
                document.getElementById('swimDistanceUnit').value = 'meters';
                document.getElementById('bikeDistanceUnit').value = 'km';
                document.getElementById('runDistanceUnit').value = 'km';

                // Set default transition times
                document.getElementById('transition1').value = '00:02:30';
                document.getElementById('transition2').value = '00:01:30';
            }

            function updatePresetDistances(distanceType) {
                const distances = {
                    super_sprint: { swim: 400, bike: 10, run: 2.5 },
                    sprint: { swim: 750, bike: 20, run: 5 },
                    olympic: { swim: 1500, bike: 40, run: 10 },
                    long_course: { swim: 2000, bike: 50, run: 12 },
                    half_ironman: { swim: 1900, bike: 90, run: 21.1 },
                    ironman: { swim: 3800, bike: 180, run: 42.2 },
                    double_ironman: { swim: 7600, bike: 360, run: 84.4 }
                };

                if (distances[distanceType]) {
                    document.getElementById('swimDistance').value = distances[distanceType].swim;
                    document.getElementById('bikeDistance').value = distances[distanceType].bike;
                    document.getElementById('runDistance').value = distances[distanceType].run;

                    // Update units to kilometers for consistency
                    document.getElementById('swimDistanceUnit').value = 'meters';
                    document.getElementById('bikeDistanceUnit').value = 'km';
                    document.getElementById('runDistanceUnit').value = 'km';
                }
            }

            function handleRaceTimeSubmit(e) {
                e.preventDefault();

                const swimTimeStr = document.getElementById('swimTime').value;
                const bikeTimeStr = document.getElementById('bikeTime').value;
                const runTimeStr = document.getElementById('runTime').value;
                const t1Str = document.getElementById('transition1').value || '00:02:30';
                const t2Str = document.getElementById('transition2').value || '00:01:30';

                if (!swimTimeStr || !bikeTimeStr || !runTimeStr) {
                    alert('Please fill in all discipline times');
                    return;
                }

                let swimDistance, bikeDistance, runDistance;

                // Handle custom distances
                if (document.getElementById('raceDistanceType').value === 'custom') {
                    const customSwim = parseFloat(document.getElementById('customSwim').value);
                    const customBike = parseFloat(document.getElementById('customBike').value);
                    const customRun = parseFloat(document.getElementById('customRun').value);

                    if (!customSwim || !customBike || !customRun) {
                        alert('Please fill in all custom distances');
                        return;
                    }

                    swimDistance = customSwim;
                    bikeDistance = customBike;
                    runDistance = customRun;
                } else {
                    swimDistance = parseFloat(document.getElementById('swimDistance').value);
                    bikeDistance = parseFloat(document.getElementById('bikeDistance').value);
                    runDistance = parseFloat(document.getElementById('runDistance').value);
                }

                const swimTime = parseTimeString(swimTimeStr);
                const bikeTime = parseTimeString(bikeTimeStr);
                const runTime = parseTimeString(runTimeStr);
                const t1Time = parseTimeString(t1Str);
                const t2Time = parseTimeString(t2Str);

                const totalTime = swimTime + bikeTime + runTime + t1Time + t2Time;
                const results = calculateTriathlonPerformance(swimTime, bikeTime, runTime, totalTime, swimDistance, bikeDistance, runDistance);

                displayRaceTimeResults(results, swimTime, bikeTime, runTime, t1Time, t2Time, totalTime);
            }

            function handlePaceAnalysisSubmit(e) {
                e.preventDefault();

                const swimTimeStr = document.getElementById('swimAnalysisTime').value;
                const bikeTimeStr = document.getElementById('bikeAnalysisTime').value;
                const runTimeStr = document.getElementById('runAnalysisTime').value;

                if (!swimTimeStr || !bikeTimeStr || !runTimeStr) {
                    alert('Please fill in all discipline times');
                    return;
                }

                const swimTime = parseTimeString(swimTimeStr);
                const bikeTime = parseTimeString(bikeTimeStr);
                const runTime = parseTimeString(runTimeStr);

                const analysis = analyzeTriathlonPaces(swimTime, bikeTime, runTime);
                displayPaceAnalysisResults(analysis);
            }

            // Utility functions
            function parseTimeString(timeStr) {
                const parts = timeStr.split(':').map(Number);
                if (parts.length === 3) {
                    return parts[0] * 3600 + parts[1] * 60 + parts[2];
                } else if (parts.length === 2) {
                    return parts[0] * 60 + parts[1];
                }
                return 0;
            }

            function formatTime(seconds) {
                const hours = Math.floor(seconds / 3600);
                const mins = Math.floor((seconds % 3600) / 60);
                const secs = Math.floor(seconds % 60);

                if (hours > 0) {
                    return `${hours}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
                } else {
                    return `${mins}:${secs.toString().padStart(2, '0')}`;
                }
            }

            function calculateTriathlonPerformance(swimTime, bikeTime, runTime, totalTime, swimDistance, bikeDistance, runDistance) {
                // Convert distances to standard units for calculations
                const swimDistanceKm = convertDistance(swimDistance, document.getElementById('swimDistanceUnit').value);
                const bikeDistanceKm = convertDistance(bikeDistance, document.getElementById('bikeDistanceUnit').value);
                const runDistanceKm = convertDistance(runDistance, document.getElementById('runDistanceUnit').value);

                const swimPace = swimTime / swimDistanceKm; // seconds per km
                const bikeSpeed = bikeDistanceKm / (bikeTime / 3600); // km/h
                const runPace = runTime / runDistanceKm; // seconds per km

                return {
                    totalTime: totalTime,
                    swimTime: swimTime,
                    bikeTime: bikeTime,
                    runTime: runTime,
                    swimPace: swimPace,
                    bikeSpeed: bikeSpeed,
                    runPace: runPace,
                    swimDistance: swimDistance,
                    bikeDistance: bikeDistance,
                    runDistance: runDistance
                };
            }

            function convertDistance(distance, unit) {
                switch(unit) {
                    case 'miles': return distance * 1.60934;
                    case 'meters': return distance / 1000;
                    case 'yards': return distance * 0.0009144;
                    case 'kilometers': return distance;
                    default: return distance; // km
                }
            }

            function getRaceTypeName() {
                const raceType = document.getElementById('raceDistanceType').value;
                const raceTypeNames = {
                    super_sprint: 'Super Sprint',
                    sprint: 'Sprint',
                    olympic: 'Olympic',
                    long_course: 'Long Course',
                    half_ironman: 'Half Ironman',
                    ironman: 'Ironman',
                    double_ironman: 'Double Ironman',
                    custom: 'Custom'
                };
                return raceTypeNames[raceType] || 'Olympic';
            }

            function getUnitName(discipline) {
                const unitMap = {
                    swim: { meters: 'Meters', yards: 'Yards', kilometers: 'Kilometers', miles: 'Miles' },
                    bike: { km: 'Kilometers', miles: 'Miles', meters: 'Meters', yards: 'Yards' },
                    run: { km: 'Kilometers', miles: 'Miles', meters: 'Meters', yards: 'Yards' }
                };

                const elementId = `${discipline}DistanceUnit`;
                const element = document.getElementById(elementId);
                if (element) {
                    const value = element.value;
                    return unitMap[discipline][value] || value;
                }
                return 'km';
            }

            function generateShareSection(results, context) {
                const shareText = `My triathlon prediction: ${formatTime(results.totalTime)} total time! üèä‚Äç‚ôÇÔ∏èüö¥‚Äç‚ôÇÔ∏èüèÉ‚Äç‚ôÇÔ∏è Check it out:`;
                const currentUrl = window.location.href;

                return `
                    <div class="tc-share-section">
                        <div class="tc-share-title">üì§ Share Your Results</div>
                        <div class="tc-share-subtitle">Share your triathlon performance with friends and fellow athletes!</div>
                        <div class="tc-share-buttons">
                            <button class="tc-share-btn tc-share-twitter" onclick="shareOnTwitter('${shareText}', '${currentUrl}')" title="Share on Twitter">
                                <span>üê¶</span>
                                <span>Twitter</span>
                            </button>
                            <button class="tc-share-btn tc-share-facebook" onclick="shareOnFacebook('${currentUrl}')" title="Share on Facebook">
                                <span>üìò</span>
                                <span>Facebook</span>
                            </button>
                            <button class="tc-share-btn tc-share-linkedin" onclick="shareOnLinkedIn('${shareText}', '${currentUrl}')" title="Share on LinkedIn">
                                <span>üíº</span>
                                <span>LinkedIn</span>
                            </button>
                            <button class="tc-share-btn tc-share-whatsapp" onclick="shareOnWhatsApp('${shareText}', '${currentUrl}')" title="Share on WhatsApp">
                                <span>üí¨</span>
                                <span>WhatsApp</span>
                            </button>
                            <button class="tc-share-btn tc-share-copy" id="copyLinkBtn" onclick="copyToClipboard('${currentUrl}')" title="Copy link to clipboard">
                                <span>üìã</span>
                                <span>Copy Link</span>
                            </button>
                        </div>
                        <div style="font-size: 12px; color: #94a3b8; margin-top: 16px; text-align: center;">
                            Your triathlon results inspire others on their multisport journey! üèä‚Äç‚ôÇÔ∏èüö¥‚Äç‚ôÇÔ∏èüèÉ‚Äç‚ôÇÔ∏è
                        </div>
                    </div>
                `;
            }

            // Display functions
            function displayRaceTimeResults(results, swimTime, bikeTime, runTime, t1Time, t2Time, totalTime) {
                const resultHTML = `
                    <div class="tc-results-header">
                        <div class="tc-results-title">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                            </svg>
                            Triathlon Race Time Results
                        </div>
                    </div>

                    <div class="tc-main-results">
                        <div class="tc-result-item">
                            <span class="tc-result-number">${formatTime(swimTime)}</span>
                            <div class="tc-result-label">SWIM TIME</div>
                        </div>
                        <div class="tc-result-item">
                            <span class="tc-result-number">${formatTime(bikeTime)}</span>
                            <div class="tc-result-label">BIKE TIME</div>
                        </div>
                        <div class="tc-result-item">
                            <span class="tc-result-number">${formatTime(runTime)}</span>
                            <div class="tc-result-label">RUN TIME</div>
                        </div>
                        <div class="tc-result-item">
                            <span class="tc-result-number">${formatTime(t1Time + t2Time)}</span>
                            <div class="tc-result-label">TRANSITIONS</div>
                        </div>
                        <div class="tc-result-item">
                            <span class="tc-result-number">${formatTime(totalTime)}</span>
                            <div class="tc-result-label">TOTAL TIME</div>
                        </div>
                    </div>

                    <div class="tc-details-section">
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Race Type</span>
                            <span class="tc-detail-value">${getRaceTypeName()}</span>
                        </div>
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Swim Distance</span>
                            <span class="tc-detail-value">${results.swimDistance} ${getUnitName('swim')}</span>
                        </div>
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Bike Distance</span>
                            <span class="tc-detail-value">${results.bikeDistance} ${getUnitName('bike')}</span>
                        </div>
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Run Distance</span>
                            <span class="tc-detail-value">${results.runDistance} ${getUnitName('run')}</span>
                        </div>
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Transition Times</span>
                            <span class="tc-detail-value">T1: ${formatTime(t1Time)} | T2: ${formatTime(t2Time)}</span>
                        </div>
                    </div>

                    <div class="tc-info-box">
                        <div class="tc-info-title">üèä‚Äç‚ôÇÔ∏èüö¥‚Äç‚ôÇÔ∏èüèÉ‚Äç‚ôÇÔ∏è Triathlon Performance Analysis</div>
                        <div class="tc-info-text">
                            <strong>Your total race time is ${formatTime(totalTime)}</strong> for a ${getRaceTypeName()} triathlon.
                            This includes ${formatTime(swimTime)} for swimming, ${formatTime(bikeTime)} for biking, ${formatTime(runTime)} for running,
                            and ${formatTime(t1Time + t2Time)} for transitions. Adjust your transition times based on your race experience and conditions.
                        </div>
                    </div>

                    ${generateShareSection(results, 'triathlon')}
                `;

                result.innerHTML = resultHTML;
                result.classList.add('show');
                result.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            function displayPaceAnalysisResults(analysis) {
                const resultHTML = `
                    <div class="tc-results-header">
                        <div class="tc-results-title">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <polygon points="10,8 16,12 10,16 10,8"/>
                            </svg>
                            Triathlon Pace Analysis
                        </div>
                    </div>

                    <div class="tc-main-results">
                        <div class="tc-result-item">
                            <span class="tc-result-number">${analysis.swim.pace}</span>
                            <div class="tc-result-label">SWIM PACE</div>
                        </div>
                        <div class="tc-result-item">
                            <span class="tc-result-number">${analysis.bike.speed} km/h</span>
                            <div class="tc-result-label">BIKE SPEED</div>
                        </div>
                        <div class="tc-result-item">
                            <span class="tc-result-number">${analysis.run.pace}</span>
                            <div class="tc-result-label">RUN PACE</div>
                        </div>
                    </div>

                    <div class="tc-details-section">
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Swim Distance</span>
                            <span class="tc-detail-value">${analysis.swim.distance} ${analysis.swim.unit}</span>
                        </div>
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Bike Distance</span>
                            <span class="tc-detail-value">${analysis.bike.distance} ${analysis.bike.unit}</span>
                        </div>
                        <div class="tc-detail-row">
                            <span class="tc-detail-label">Run Distance</span>
                            <span class="tc-detail-value">${analysis.run.distance} ${analysis.run.unit}</span>
                        </div>
                    </div>

                    ${generateShareSection(analysis, 'pace analysis')}
                `;

                result.innerHTML = resultHTML;
                result.classList.add('show');
                result.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            // Helper functions for calculations
            function analyzeTriathlonPaces(swimTime, bikeTime, runTime) {
                // Get distances from form inputs
                const swimDistance = parseFloat(document.getElementById('swimAnalysisDistance').value) || 1.5;
                const bikeDistance = parseFloat(document.getElementById('bikeAnalysisDistance').value) || 40;
                const runDistance = parseFloat(document.getElementById('runAnalysisDistance').value) || 10;

                // Convert distances to km for consistent calculations
                const swimDistanceKm = convertDistance(swimDistance, document.getElementById('swimAnalysisUnit').value);
                const bikeDistanceKm = convertDistance(bikeDistance, document.getElementById('bikeAnalysisUnit').value);
                const runDistanceKm = convertDistance(runDistance, document.getElementById('runAnalysisUnit').value);

                const swimPace = swimTime / swimDistanceKm; // seconds per km
                const bikeSpeed = bikeDistanceKm / (bikeTime / 3600); // km/h
                const runPace = runTime / runDistanceKm; // seconds per km

                return {
                    swim: {
                        pace: formatTime(swimPace),
                        distance: swimDistance,
                        unit: document.getElementById('swimAnalysisUnit').value
                    },
                    bike: {
                        speed: bikeSpeed.toFixed(1),
                        distance: bikeDistance,
                        unit: document.getElementById('bikeAnalysisUnit').value
                    },
                    run: {
                        pace: formatTime(runPace),
                        distance: runDistance,
                        unit: document.getElementById('runAnalysisUnit').value
                    }
                };
            }
        })();
    </script>

