                padding: 20px !important;
                margin: 25px 0 !important;
            }

            .water-disclaimer h3 {
                font-size: 18px !important;
            }

            .water-disclaimer p {
                font-size: 14px !important;
            }
        }

        @media (max-width: 480px) {
