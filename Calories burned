    <script>
        (function() {
            // DOM Elements
            const form = document.getElementById('waterCalculatorForm');
            const weightInput = document.getElementById('weightInput');
            const durationInput = document.getElementById('durationInput');
            const activitySelect = document.getElementById('activitySelect');
            const waterDepthSelect = document.getElementById('waterDepthSelect');
            const environmentSelect = document.getElementById('environmentSelect');
            const resultsContainer = document.getElementById('resultsContainer');

            // Unit toggle buttons
            const weightKgButton = document.getElementById('weightKgButton');
            const weightLbsButton = document.getElementById('weightLbsButton');
            const durationMinButton = document.getElementById('durationMinButton');
            const durationHrButton = document.getElementById('durationHrButton');

            // State variables
            let isWeightKg = true;
            let isDurationMin = true;
            let currentResults = null;

            // Event listeners
            weightKgButton.addEventListener('click', () => toggleWeightUnit(true));
            weightLbsButton.addEventListener('click', () => toggleWeightUnit(false));
            durationMinButton.addEventListener('click', () => toggleDurationUnit(true));
            durationHrButton.addEventListener('click', () => toggleDurationUnit(false));
            form.addEventListener('submit', handleFormSubmit);

            // Weight unit toggle
            function toggleWeightUnit(useKg) {
                if (useKg === isWeightKg) return;

                isWeightKg = useKg;

                if (isWeightKg) {
                    weightKgButton.classList.add('active');
                    weightLbsButton.classList.remove('active');
                    if (weightInput.value) {
                        weightInput.value = (parseFloat(weightInput.value) / 2.20462).toFixed(1);
                    }
                    weightInput.placeholder = "Enter weight in kg";
                } else {
                    weightLbsButton.classList.add('active');
                    weightKgButton.classList.remove('active');
                    if (weightInput.value) {
                        weightInput.value = (parseFloat(weightInput.value) * 2.20462).toFixed(1);
                    }
                    weightInput.placeholder = "Enter weight in lbs";
                }
            }

            // Duration unit toggle
            function toggleDurationUnit(useMin) {
                if (useMin === isDurationMin) return;

                isDurationMin = useMin;

                if (isDurationMin) {
                    durationMinButton.classList.add('active');
                    durationHrButton.classList.remove('active');
                    if (durationInput.value) {
                        durationInput.value = (parseFloat(durationInput.value) * 60).toFixed(0);
                    }
                    durationInput.placeholder = "Enter duration in minutes";
                } else {
                    durationHrButton.classList.add('active');
                    durationMinButton.classList.remove('active');
                    if (durationInput.value) {
                        durationInput.value = (parseFloat(durationInput.value) / 60).toFixed(2);
                    }
                    durationInput.placeholder = "Enter duration in hours";
                }
            }

            // Get water depth multiplier
            function getWaterDepthMultiplier(depth) {
                const multipliers = {
                    'shallow': 1.0,      // Ankle to knee - baseline
                    'moderate': 1.15,    // Waist deep - +15% resistance
                    'deep': 1.25,        // Chest deep - +25% resistance
                    'very-deep': 1.35    // Neck/shoulders - +35% resistance
                };
                return multipliers[depth] || 1.0;
            }

            // Get environment multiplier
            function getEnvironmentMultiplier(environment) {
                const multipliers = {
                    'pool': 1.0,         // Still water - baseline
                    'therapy': 0.95,     // Warm water - slightly easier
                    'ocean': 1.1,        // Natural resistance - +10%
                    'current': 1.2       // Resistance jets - +20%
                };
                return multipliers[environment] || 1.0;
            }

            // Get activity text
            function getActivityText(metValue) {
                const activities = {
                    '2.5': 'Water Walking - Light Effort',
                    '4.8': 'Water Walking - Moderate Effort',
                    '6.8': 'Water Walking - Vigorous Effort',
                    '6.5': 'Water Running - Slow',
                    '7.5': 'Water Running - Moderate',
                    '8.5': 'Water Running - Fast',
                    '9.8': 'Water Running - Very Fast / Water Jogging'
                };
                return activities[metValue] || 'Water Activity';
            }

            // Get water depth text
            function getWaterDepthText(depth) {
                const texts = {
                    'shallow': 'Shallow (Ankle to Knee)',
                    'moderate': 'Moderate (Waist Deep)',
                    'deep': 'Deep (Chest Deep)',
                    'very-deep': 'Very Deep (Neck/Shoulders)'
                };
                return texts[depth] || depth;
            }

            // Get environment text
            function getEnvironmentText(environment) {
                const texts = {
                    'pool': 'Swimming Pool',
                    'therapy': 'Therapy Pool',
                    'ocean': 'Ocean/Lake',
                    'current': 'Pool with Current'
                };
                return texts[environment] || environment;
            }

            // Calculate water exercise calories
            function calculateWaterCalories(weight, duration, baseMET, waterDepth, environment) {
                // Convert weight to kg
                const weightKg = isWeightKg ? weight : weight / 2.20462;

                // Convert duration to minutes
                const durationMin = isDurationMin ? duration : duration * 60;

                // Apply water depth and environment multipliers
                const depthMultiplier = getWaterDepthMultiplier(waterDepth);
                const envMultiplier = getEnvironmentMultiplier(environment);

                // Calculate adjusted MET
                const adjustedMET = baseMET * depthMultiplier * envMultiplier;

                // Calculate calories using formula: (Time √ó MET √ó 3.5 √ó Weight) / 200
                const calories = (durationMin * adjustedMET * 3.5 * weightKg) / 200;

                // Calculate additional metrics
                const caloriesPerHour = (calories / durationMin) * 60;
                const caloriesPerMinute = calories / durationMin;
                const estimatedHeartRate = Math.round(100 + (adjustedMET * 8));
                const waterResistance = Math.round(((depthMultiplier * envMultiplier - 1) * 100));

                return {
                    calories: calories,
                    baseMET: baseMET,
                    adjustedMET: adjustedMET,
                    caloriesPerHour: caloriesPerHour,
                    caloriesPerMinute: caloriesPerMinute,
                    durationHours: durationMin / 60,
                    durationMinutes: durationMin,
                    estimatedHeartRate: estimatedHeartRate,
                    waterResistance: waterResistance,
                    depthMultiplier: depthMultiplier,
                    envMultiplier: envMultiplier
                };
            }

            // Form submission handler
            function handleFormSubmit(e) {
                e.preventDefault();

                const weight = parseFloat(weightInput.value);
                const duration = parseFloat(durationInput.value);
                const baseMET = parseFloat(activitySelect.value);
                const waterDepth = waterDepthSelect.value;
                const environment = environmentSelect.value;

                // Validation
                if (!weight || weight <= 0 || weight > 300) {
                    alert('Please enter a valid weight between 30-300 kg/lbs');
                    weightInput.focus();
                    return;
                }

                if (!duration || duration <= 0) {
                    alert('Please enter a valid duration');
                    durationInput.focus();
                    return;
                }

                if (!baseMET) {
                    alert('Please select a water activity type');
                    activitySelect.focus();
                    return;
                }

                if (!waterDepth) {
                    alert('Please select water depth');
                    waterDepthSelect.focus();
                    return;
                }

                if (!environment) {
                    alert('Please select water environment');
                    environmentSelect.focus();
                    return;
                }

                // Show loading state
                const submitButton = document.querySelector('.water-calculate-btn');
                const originalButtonText = submitButton.innerHTML;
                submitButton.innerHTML = `
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="animation: spin 1s linear infinite;">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M12 6v6l4 2"/>
                    </svg>
                    Calculating...
                `;
                submitButton.disabled = true;

                // Add spin animation
                const style = document.createElement('style');
                style.textContent = '@keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }';
                document.head.appendChild(style);

                // Calculate results
                setTimeout(() => {
                    const results = calculateWaterCalories(weight, duration, baseMET, waterDepth, environment);
                    currentResults = {
                        ...results,
                        activityText: getActivityText(baseMET.toString()),
                        waterDepthText: getWaterDepthText(waterDepth),
                        environmentText: getEnvironmentText(environment)
                    };

                    // Display results
                    displayResults(currentResults);

                    // Restore button
                    submitButton.innerHTML = originalButtonText;
                    submitButton.disabled = false;
                    document.head.removeChild(style);
                }, 500);
            }

            // Display results
            function displayResults(results) {
                const weightUnit = isWeightKg ? 'kg' : 'lbs';
                const durationUnit = isDurationMin ? 'min' : 'hr';
                const displayDuration = isDurationMin ? results.durationMinutes : results.durationHours;

                const resultsHTML = `
                    <div class="water-results-header">
                        <div class="water-results-title">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                            </svg>
                            Your Water Exercise Analysis Results
                        </div>
                    </div>

                    <div class="water-main-results">
                        <div class="water-result-item" style="grid-column: span 2;">
                            <span class="water-result-number">${Math.round(results.calories)}</span>
                            <div class="water-result-label">Calories Burned</div>
                        </div>
                    </div>

                    <div class="water-main-results">
                        <div class="water-result-item">
                            <span class="water-result-number-small">${results.adjustedMET.toFixed(1)}</span>
                            <div class="water-result-label">Adjusted MET</div>
                        </div>
                        <div class="water-result-item">
                            <span class="water-result-number-small">${Math.round(results.caloriesPerHour)}</span>
                            <div class="water-result-label">Cal/Hour</div>
                        </div>
                        <div class="water-result-item">
                            <span class="water-result-number-small">${results.waterResistance}%</span>
                            <div class="water-result-label">Water Resistance</div>
                        </div>
                        <div class="water-result-item">
                            <span class="water-result-number-small">${results.estimatedHeartRate}</span>
                            <div class="water-result-label">Est. Heart Rate</div>
                        </div>
                    </div>

                    <div class="water-details-section">
                        <div class="water-detail-row">
                            <span class="water-detail-label">Duration</span>
                            <span class="water-detail-value">${displayDuration.toFixed(1)} ${durationUnit}</span>
                        </div>
                        <div class="water-detail-row">
                            <span class="water-detail-label">Activity Type</span>
                            <span class="water-detail-value">${results.activityText}</span>
                        </div>
                        <div class="water-detail-row">
                            <span class="water-detail-label">Base MET Value</span>
                            <span class="water-detail-value">${results.baseMET.toFixed(1)}</span>
                        </div>
                        <div class="water-detail-row">
                            <span class="water-detail-label">Water Depth</span>
                            <span class="water-detail-value">${results.waterDepthText}</span>
                        </div>
                        <div class="water-detail-row">
                            <span class="water-detail-label">Water Environment</span>
                            <span class="water-detail-value">${results.environmentText}</span>
                        </div>
                        <div class="water-detail-row">
                            <span class="water-detail-label">Calories per Minute</span>
                            <span class="water-detail-value">${results.caloriesPerMinute.toFixed(1)} cal/min</span>
                        </div>
                    </div>

                    <div class="water-action-buttons">
                        <button class="water-action-btn water-export-btn" onclick="exportResults()">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                <polyline points="7,10 12,15 17,10"/>
                                <line x1="12" y1="15" x2="12" y2="3"/>
                            </svg>
                            Export Results
                        </button>
                        <button class="water-action-btn water-share-btn" onclick="shareResults()">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="18" cy="5" r="3"/>
                                <circle cx="6" cy="12" r="3"/>
                                <circle cx="18" cy="19" r="3"/>
                                <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/>
                                <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>
                            </svg>
                            Share Results
                        </button>
                    </div>

                    <div class="water-info-box">
                        <div class="water-info-title">üèä Your Water Exercise Performance Analysis</div>
                        <div class="water-info-text">
                            <strong>Energy Expenditure:</strong> Your water exercise session burned approximately <strong>${Math.round(results.calories)} calories</strong>
                            with an adjusted MET value of <strong>${results.adjustedMET.toFixed(1)}</strong>. The water resistance added <strong>${results.waterResistance}%</strong>
                            additional intensity to your workout.<br><br>

                            <strong>Performance Metrics:</strong> Your ${results.activityText.toLowerCase()} session burned approximately <strong>${Math.round(results.caloriesPerHour)} calories per hour</strong>,
                            which is ${results.adjustedMET > 8 ? 'excellent' : results.adjustedMET > 6 ? 'very good' : 'good'} intensity for aquatic exercise.
                            This analysis is based on validated MET values from the Compendium of Physical Activities.

                            Compare your results with other <a href="https://fitliferegime.com/exercise-calories-burned-calculator/" rel="dofollow" target="_blank">exercise calorie calculators</a>
                            for comprehensive fitness tracking.
                        </div>
                    </div>
                `;

                resultsContainer.innerHTML = resultsHTML;
                resultsContainer.classList.add('show');
                resultsContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            // Export results function
            function exportResults() {
                if (!currentResults) {
                    alert('No results to export. Please calculate your water exercise calories first.');
                    return;
                }

                const weightUnit = isWeightKg ? 'kg' : 'lbs';
                const date = new Date().toLocaleDateString();

                const exportData = [
                    'Water Walking & Running Calorie Calculator Results',
                    `Date,${date}`,
                    '',
                    'Session Information',
                    `Duration,${currentResults.durationMinutes.toFixed(1)} minutes`,
                    `Activity Type,${currentResults.activityText}`,
                    `Water Depth,${currentResults.waterDepthText}`,
                    `Water Environment,${currentResults.environmentText}`,
                    '',
                    'Results',
                    `Calories Burned,${Math.round(currentResults.calories)}`,
                    `Base MET Value,${currentResults.baseMET.toFixed(1)}`,
                    `Adjusted MET Value,${currentResults.adjustedMET.toFixed(1)}`,
                    `Calories per Hour,${Math.round(currentResults.caloriesPerHour)}`,
                    `Calories per Minute,${currentResults.caloriesPerMinute.toFixed(1)}`,
                    `Water Resistance Increase,${currentResults.waterResistance}%`,
                    `Estimated Heart Rate,${currentResults.estimatedHeartRate} bpm`,
                    '',
                    'Analysis',
                    `Intensity Level,${currentResults.adjustedMET > 8 ? 'High Intensity' : currentResults.adjustedMET > 6 ? 'Moderate-High Intensity' : 'Moderate Intensity'}`,
                    `Depth Multiplier,${currentResults.depthMultiplier}x`,
                    `Environment Multiplier,${currentResults.envMultiplier}x`
                ].join('\n');

                // Download CSV file
                const blob = new Blob([exportData], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);
                link.setAttribute('href', url);
                link.setAttribute('download', `Water_Exercise_Calories_${date.replace(/\//g, '-')}.csv`);
                link.style.visibility = 'hidden';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }

            // Share results function
            function shareResults() {
                if (!currentResults) {
                    alert('No results to share. Please calculate your water exercise calories first.');
                    return;
                }

                const shareUrl = 'https://fitliferegime.com/water-walking-calories-burned-calculator/';

                const shareText = `üèä My Water Exercise Results:\n\n` +
                    `üî• Calories Burned: ${Math.round(currentResults.calories)} cal\n` +
                    `‚ö° Adjusted MET: ${currentResults.adjustedMET.toFixed(1)}\n` +
                    `üíß Water Resistance: +${currentResults.waterResistance}%\n` +
                    `üíì Est. Heart Rate: ${currentResults.estimatedHeartRate} bpm\n` +
                    `‚è±Ô∏è Duration: ${Math.round(currentResults.durationMinutes)} minutes\n\n` +
                    `Calculate yours at: ${shareUrl}`;

                // Try native sharing first (mobile devices)
                if (navigator.share) {
                    navigator.share({
                        title: 'My Water Exercise Results - FitLife Calculator',
                        text: shareText,
                        url: shareUrl
                    }).catch(err => {
                        console.log('Error sharing:', err);
                        fallbackShare(shareText);
                    });
                } else {
                    fallbackShare(shareText);
                }
            }

            function fallbackShare(text) {
                if (navigator.clipboard) {
                    navigator.clipboard.writeText(text);
                    alert('Results copied to clipboard!');
                } else {
                    // Fallback for older browsers
                    const textArea = document.createElement('textarea');
                    textArea.value = text;
                    document.body.appendChild(textArea);
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                    alert('Results copied to clipboard!');
                }
            }

            // Make functions globally accessible
            window.exportResults = exportResults;
            window.shareResults = shareResults;
        })();
    </script>

    <!-- SEO Content Sections -->
    <div class="water-calculator-wrapper">
        <div class="water-main-container" style="margin-top: 30px !important;">
            <section class="water-seo-section">
                <h2 class="water-section-heading">How Many Calories Does Water Walking & Running Burn?</h2>
                <div class="water-content-grid">
                    <div class="water-content-card">
                        <p>
                            Water walking and running burn 250-800 calories per hour, depending on intensity, depth, and body weight. Moderate water walking burns approximately 400-500 cal/hour, while vigorous water running can burn 600-800 cal/hour.
                            <br><br>
                            Water exercise combines cardio benefits with natural resistance training. Water's resistance increases calorie burn significantly compared to land exercise while reducing joint impact by up to 80%. Each step overcomes water resistance in multiple directions, engaging more muscles and burning additional calories.
                            <br><br>
                            Our calculator uses validated MET values from the <a href="https://pacompendium.com/water-activities/" rel="dofollow" target="_blank">Compendium of Physical Activities</a> for accurate estimates. Compare with our <a href="https://fitliferegime.com/walking-calorie-burn-calculator/" rel="dofollow" target="_blank">walking calorie calculator</a> for land-based exercise.
                        </p>
                    </div>
                </div>
            </section>

            <section class="water-seo-section">
                <h2 class="water-section-heading">Science of Water Exercise Calorie Burn</h2>
                <div class="water-content-grid">
                    <div class="water-content-card">
                    
                        <p>
                            Water provides up to 12 times more resistance than air, making aquatic exercise highly effective for calorie burning.
                            <a href="https://pmc.ncbi.nlm.nih.gov/articles/PMC7242220/" rel="dofollow" target="_blank">Research published in the Journal of Exercise Rehabilitation</a>
                            demonstrates that water depth dramatically impacts calorie burn‚Äîchest-deep water increases energy expenditure by 25-35% compared to shallow water.
                            <br><br>
                            Our calculator uses scientifically validated MET values from the <a href="https://pacompendium.com/water-activities/" rel="dofollow" target="_blank">Compendium of Physical Activities</a>,
                            ranging from 2.5 METs (light water walking) to 9.8 METs (vigorous water jogging). Water depth, movement speed, body weight, and environment all affect your calorie burn.
                            For other aquatic activities, try our <a href="https://fitliferegime.com/swimming-calories-burned-calculator/" rel="dofollow" target="_blank">swimming calculator</a>
                            or <a href="https://fitliferegime.com/aqua-aerobics-calorie-burn/" rel="dofollow" target="_blank">aqua aerobics calculator</a>.
                        </p>
                    </div>
                </div>
            </section>

            <section class="water-seo-section">
                <h2 class="water-section-heading">Water Exercise Calorie Formula & Methodology</h2>
                
                <div class="water-formula-box">
                    <div class="water-formula-title">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2"/>
                            <path d="M3 9h18M9 21V9"/>
                        </svg>
                        The Scientific Formula
                    </div>

                    <div class="water-formula-display">
                        <div class="water-formula-text">
                            Calories = (Time √ó MET √ó 3.5 √ó Weight) √∑ 200
                        </div>
                    </div>

                    <div class="water-formula-explanation">
                        <h4>üìä Formula Components Explained:</h4>
                        <ul>
                            <li><strong>Time:</strong> Duration of water exercise in minutes</li>
                            <li><strong>MET:</strong> Metabolic equivalent adjusted for activity type, water depth, and environment</li>
                            <li><strong>3.5:</strong> Standard oxygen consumption constant (ml/kg/min)</li>
                            <li><strong>Weight:</strong> Your body weight in kilograms</li>
                            <li><strong>200:</strong> Caloric conversion factor</li>
                        </ul>
                    </div>

                    <div class="water-formula-explanation">
                        <h4>üåä Water Adjustment Formula:</h4>
                        <ul>
                            <li><strong>Adjusted MET:</strong> Base MET √ó Depth Multiplier √ó Environment Multiplier</li>
                            <li><strong>Depth Multipliers:</strong> Shallow (1.0x), Waist Deep (1.15x), Chest Deep (1.25x), Neck Deep (1.35x)</li>
                            <li><strong>Environment Multipliers:</strong> Pool (1.0x), Therapy Pool (0.95x), Ocean (1.1x), Current Pool (1.2x)</li>
                        </ul>
                    </div>

                    <div class="water-formula-example">
                        <h4>üí° Example Calculation:</h4>
                        <p><strong>Scenario:</strong> 70 kg person, 30 minutes, moderate water walking (4.8 METs), chest-deep water (1.25x), pool environment (1.0x)</p>
                        <p><strong>Step 1:</strong> Calculate Adjusted MET = 4.8 √ó 1.25 √ó 1.0 = 6.0 METs</p>
                        <p><strong>Step 2:</strong> Apply Formula = (30 √ó 6.0 √ó 3.5 √ó 70) √∑ 200</p>
                        <p><strong>Result:</strong> 441 calories (30 √ó 6.0 √ó 3.5 √ó 70) √∑ 200 = <strong>441 calories burned</strong></p>
                        <p><strong>Insight:</strong> The chest-deep water increased calorie burn by 25% compared to shallow water!</p>
                    </div>
                </div>
            </section>

